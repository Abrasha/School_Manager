<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="343.0" prefWidth="571.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="school_manager.view.LoginFragmentController">
   <top>
      <ImageView fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@res/logo_main.png" />
         </image>
      </ImageView>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <GridPane alignment="CENTER" hgap="10.0" prefHeight="84.0" prefWidth="551.0" vgap="10.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="221.0" minWidth="10.0" prefWidth="119.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="342.0" minWidth="10.0" prefWidth="341.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Логін:" />
            <Label text="Пароль:" GridPane.rowIndex="1" />
            <TextField fx:id="tfLogin" promptText="Введіть логін ..." GridPane.columnIndex="1" />
            <PasswordField fx:id="tfPassword" promptText="Введіть пароль ..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="infoField" alignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="84.0" prefWidth="490.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="buttonOK" mnemonicParsing="false" onAction="#okClicked" text="Увійти" />
            <Button fx:id="buttonCancel" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#cancelClicked" text="Скасувати" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
